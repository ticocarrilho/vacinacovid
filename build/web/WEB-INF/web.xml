<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Enfermeiro</servlet-name>
        <servlet-class>br.recife.edu.ifpe.controller.EnfermeiroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PacienteServlet</servlet-name>
        <servlet-class>br.recife.edu.ifpe.controller.PacienteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GrupoServlet</servlet-name>
        <servlet-class>br.recife.edu.ifpe.controller.GrupoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VacinaServlet</servlet-name>
        <servlet-class>br.recife.edu.ifpe.controller.VacinaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Enfermeiro</servlet-name>
        <url-pattern>/Enfermeiro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PacienteServlet</servlet-name>
        <url-pattern>/PacienteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GrupoServlet</servlet-name>
        <url-pattern>/GrupoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VacinaServlet</servlet-name>
        <url-pattern>/VacinaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
